<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        h1 {
            text-align: center;
        }
        form {
            display: flex;
            flex-wrap: wrap;
            width: 100%;
        }
       .col {
            display: flex;
            flex-direction: column;
            margin-bottom: 10px;
            width: 100%;
        }
        input[type="text"], input[type="number"] {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 5px;
            width: 100%;
        }
        input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
        }
        @media only screen and (min-width: 600px) {
           .col {
                width: 50%;
            }
        }
        @media only screen and (min-width: 768px) {
           .col {
                width: 33.33%;
            }
        }
    </style>
</head>
<body>
    <h1>REGISTRO DIRECCION USUARIO</h1>
  <form id="form">
    <div class="col">
      <input type="number" class="form-control" placeholder="FAVOR DIGITA TU DOCUMENTO" aria-label="DOCUMENTO" name="DOCUMENTO"
      id="FORMDOCUMENTO" required>
    </div>
    <div class="col">
      <input type="text" class="form-control" placeholder="CALLE" aria-label="CALLE" name="CALLE"
        id="FORMCALLE" required>
    </div>
    
    <div class="col">
      <input type="text" class="form-control" placeholder="PAISID" aria-label="PAISID" name="PAISID"
        id="FORMPAIS" required>
    </div>
    
    <div class="col">
      <input type="text" class="form-control" placeholder="CIUDADID" aria-label="CIUDADID" name="CIUDADID"
        id="FORMCIUDAD" required>
    </div>
    
    <div class="col">
      <input type="text" class="form-control" placeholder="ESTADOID" aria-label="ESTADOID" name="ESTADOID"
        id="FORMESTADO" required>
    </div>
    
    <div class="col">
      <input type="text" class="form-control" placeholder="CODIGOPOSTAL" aria-label="CODIGOPOSTAL" name="CODIGOPOSTAL"
        id="FORMCODIGOPOSTAL" required>
    </div>
    <input type="submit" value="submit">
  </form>
  <script>
    const form = document.getElementById('form')
    form.addEventListener('submit', (event)=>{
      event.preventDefault()

      const documento = document.getElementById('FORMDOCUMENTO').value
      const calle = document.getElementById('FORMCALLE').value
      const pais = document.getElementById('FORMPAIS').value
      const estado = document.getElementById('FORMESTADO').value
      const ciudad = document.getElementById('FORMCIUDAD').value
      const codigopostal = document.getElementById('FORMCODIGOPOSTAL').value

      const formData = {
        DOCUMENTO:documento,
        CALLE:calle,
        PAIS:pais,
        ESTADO:estado,
        CIUDAD:ciudad,
        CODIGOPOSTAL:codigopostal
      }
      fetch('/direccion', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
          },
          body: JSON.stringify(formData)
      })
      .then((response)=>{
        if (response.status == 200) {
              swal("Bravo!", "Informacion Ingresada", "success", {
                buttons: false, 
                timer: 1000
              })
              .then(() => {
                setTimeout(() => {
                  window.location.href = "http://localhost:3000/map";
                }, 500); // Retraso de 500 milisegundos (0.5 segundos)
              });
            }else if (response.status == 404){ swal("Ooops","Usuario no encontrado","error",{
              buttons: false,
              timer: 1000
            })}
            else {swal("Ooops","No se pudo ingresar la direccion","error",{
              buttons: false,
              timer: 1000
            })}
          });
      })
  </script>
</body>
</html>